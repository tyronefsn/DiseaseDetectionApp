<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:fontFamily="@font/poppins"
    tools:context=".SetFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/materialToolbar3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7ed597"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#0D522C"
                android:text="Input Data"
                android:textSize="17sp"
                android:textStyle="bold" />
        </com.google.android.material.appbar.MaterialToolbar>

        <TextView

            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:text="Starting Date:"
            android:textColor="#0D522C"
            android:textSize="19sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/materialToolbar3" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="(Araw ng pagtatanim ng mga punla)"
            android:textColor="#0D522C"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="6/03/2024"
            app:chipBackgroundColor="#667ED957"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/materialToolbar3" />

        <TextView

            android:id="@+id/headerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="96dp"
            android:text="Recommended AWD Water Management"
            android:textColor="#0D522C"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/materialToolbar3" />

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="64dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/headerText">

            <TableRow android:layout_marginBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:text="Vegetative Growth Stage"
                    android:textColor="#0D522C"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:text="="
                    android:textColor="#0D522C"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/vegGrowthStage"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:text="60 days"
                    android:textColor="#0D522C"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow android:layout_marginBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:text="STANDING WATER"
                    android:textColor="#0D522C"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:text="="
                    android:textColor="#0D522C"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/vegStandingWater"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="24dp"
                    android:inputType="number"
                    android:enabled="false"
                    android:text="10"
                    android:textColor="#0D522C"
                    android:textSize="12sp" />

            </TableRow>

            <TableRow android:layout_marginBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:text="SAFE AWD"
                    android:textColor="#0D522C"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:text="="
                    android:textColor="#0D522C"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/vegSafeAWD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:inputType="number"
                    android:text="50"
                    android:enabled="false"
                    android:textColor="#0D522C"
                    android:textSize="12sp" />
            </TableRow>

            <TableRow android:layout_marginBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:text="Reproductive Stage"
                    android:textColor="#0D522C"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:text="="
                    android:textColor="#0D522C"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/repStage"

                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:text="30 days"
                    android:textColor="#0D522C"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow android:layout_marginBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:text="STANDING WATER"
                    android:textColor="#0D522C"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:text="="
                    android:textColor="#0D522C"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/repStandingWater"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:inputType="number"
                    android:text="10"
                    android:enabled="false"
                    android:textColor="#0D522C"
                    android:textSize="12sp" />

            </TableRow>

            <TableRow android:layout_marginBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:text="SAFE AWD"
                    android:textColor="#0D522C"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:text="="
                    android:textColor="#0D522C"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/repSafeAWD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:inputType="number"
                    android:text="17"
                    android:enabled="false"
                    android:textColor="#0D522C"
                    android:textSize="12sp" />
            </TableRow>

            <TableRow android:layout_marginBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:text="STANDING WATER"
                    android:textColor="#0D522C"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:text="="
                    android:textColor="#0D522C"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/repStandingWater1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:inputType="number"
                    android:text="3"
                    android:enabled="false"
                    android:textColor="#0D522C"
                    android:textSize="12sp" />
            </TableRow>

            <TableRow android:layout_marginBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:text="Ripening Stage"
                    android:textColor="#0D522C"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:text="="
                    android:textColor="#0D522C"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ripStage"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:text="30 days"
                    android:textColor="#0D522C"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow android:layout_marginBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:text="STANDING WATER"
                    android:textColor="#0D522C"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:text="="
                    android:textColor="#0D522C"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/ripStandingWater"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:inputType="number"
                    android:text="3"
                    android:enabled="false"
                    android:textColor="#0D522C"
                    android:textSize="12sp" />

            </TableRow>

            <TableRow android:layout_marginBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:text="SAFE AWD"
                    android:textColor="#0D522C"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:text="="
                    android:textColor="#0D522C"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/ripSafeAWD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:inputType="number"
                    android:text="12"
                    android:enabled="false"
                    android:textColor="#0D522C"
                    android:textSize="12sp" />
            </TableRow>

            <TableRow android:layout_marginBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:text="TERMINAL DRAINAGE"
                    android:textColor="#0D522C"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:text="="
                    android:textColor="#0D522C"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/ripTerminalDrainage"
                    android:layout_width="47dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:enabled="false"
                    android:inputType="number"
                    android:text="15"
                    android:textColor="#0D522C"
                    android:textSize="12sp" />
            </TableRow>

            <TableRow android:layout_marginBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:text="Harvesting"
                    android:textColor="#0D522C"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/customizeButton"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="44dp"
            android:backgroundTint="#7ed597"
            android:text="Customize"
            android:textColor="#0D522C"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

        <Button
            android:id="@+id/submitButton"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="64dp"
            android:backgroundTint="#2E6B15"
            android:text="Submit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>